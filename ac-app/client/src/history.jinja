{% extends "base.html" %}
{% block content %}
<div class="filters-container flex justify-center">
  <div class="w-2/3">
    <span id="manga-span"
      class="inline-flex items-center px-2 py-1 mr-2 text-sm font-medium text-blue-800 bg-blue-100 rounded dark:bg-blue-900 dark:text-blue-300">
      Manga
      <button type="button"
        id="manga-filter-btn"
        class="inline-flex items-center p-0.5 ml-2 text-sm text-blue-400 bg-transparent rounded-sm hover:bg-blue-200 hover:text-blue-900 dark:hover:bg-blue-800 dark:hover:text-blue-300"
        data-dismiss-target="#manga-span" aria-label="Remove">
        <svg aria-hidden="true" class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd"
            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
        <span class="sr-only">Remove badge</span>
      </button>
    </span>
    <span id="anime-span"
      class="inline-flex items-center px-2 py-1 mr-2 text-sm font-medium text-blue-800 bg-blue-100 rounded dark:bg-blue-900 dark:text-blue-300">
      Anime
      <button type="button"
        id="anime-filter-btn"
        class="inline-flex items-center p-0.5 ml-2 text-sm text-blue-400 bg-transparent rounded-sm hover:bg-blue-200 hover:text-blue-900 dark:hover:bg-blue-800 dark:hover:text-blue-300"
        data-dismiss-target="#anime-span" aria-label="Remove">
        <svg aria-hidden="true" class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd"
            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
        <span class="sr-only">Remove badge</span>
      </button>
    </span>
    <span id="sort-by-time-span"
      class="inline-flex items-center justify-center w-6 h-6 mr-2 text-sm font-semibold text-blue-800 bg-blue-100 rounded-full dark:bg-gray-700 dark:text-blue-400 cursor-pointer">
      <i class="fa-solid fa-clock-rotate-left"></i>
      <span class="sr-only">Icon description</span>
    </span>
  </div>
</div>

<template id="history-card-template">
    <div class="flex justify-center m-2 history-card-container">
        <div class="history-card flex flex-col md:flex-row w-2/3 rounded-lg bg-white shadow-lg cursor-pointer transform transition duration-500 hover:scale-105">
          <img class="h-96 md:h-auto object-cover md:w-72 rounded-t-lg md:rounded-none md:rounded-l-lg overflow-hidden" alt="" />
          <div class="p-6 flex flex-col w-72">
            <h5 class="title text-gray-900 text-3xl font-medium mb-2 truncate"></h5>
            <p class="text-gray-600 text-md">Last Update: <span class="last-update-txt"></span></p>
            <p class="text-gray-600 text-md">Last Read: <span class="last-read-txt"></span></p>
            <p class="text-gray-600 text-md">Status: <span class="status-txt"></span></p>
            <p class="my-2 text-gray-600 text-3xl"><i class="fa-regular fa-heart"></i></p>
          </div>
          <div class="p-2 grow flex justify-end">
            <p class="close-btn text-gray-200 hover:text-gray-800 text-4xl"><i class="fa-solid fa-xmark text-right"></i></p>
          </div>
        </div>
      </div>
</template>
<template id="anime-history-card-template">
  <div class="flex justify-center m-2 a-history-card-container">
    <div
      class="history-card flex flex-col md:flex-row w-2/3 rounded-lg bg-white shadow-lg cursor-pointer transform transition duration-500 hover:scale-105">
      <div class="p-6 flex flex-col justify-start w-72">
        <h5 class="title text-gray-900 text-3xl font-medium mb-2 truncate"></h5>
        <p class="my-2 text-gray-600 text-3xl"><i class="fa-regular fa-heart"></i></p>
      </div>
      <div class="p-2 grow flex justify-end">
        <p class="close-btn text-gray-200 hover:text-gray-800 text-4xl"><i class="fa-solid fa-xmark text-right"></i></p>
      </div>
    </div>
  </div>
</template>
<div class="history-container">

</div>
{% endblock %}
{% block post_body %}
<script src="/ac/scripts/history.js" async></script>
{% endblock %}
